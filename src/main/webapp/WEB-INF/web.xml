<?xml version = '1.0' encoding = 'UTF-8'?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<display-name>Employee Application</display-name>

	<servlet>
		<servlet-name>EmployeeServlet</servlet-name>
		<servlet-class>com.caseytoews.webapp.employee.controller.EmployeeServlet</servlet-class>
		<init-param>
			<param-name>driver</param-name>
			<param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
		</init-param>
		<init-param>
			<param-name>url</param-name>
			<param-value>jdbc:sqlserver://Beangrinder.bcit.ca</param-value>
		</init-param>
		<init-param>
			<param-name>user</param-name>
			<param-value>javastudent</param-value>
		</init-param>
		<init-param>
			<param-name>password</param-name>
			<param-value>compjava</param-value>
		</init-param>
		<init-param>
			<param-name>tablename</param-name>
			<param-value>a00984935_Employees</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>


	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/employees</url-pattern>
	</servlet-mapping>

	<context-param>
		<param-name>log4j-config-location</param-name>
		<param-value>WEB-INF/log4j.properties</param-value>
	</context-param>

	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/JSP/errors.jsp</location>
	</error-page>
	<servlet-mapping>
		<servlet-name>EmployeesServlet</servlet-name>
		<url-pattern>/EmployeesServlet</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>employees</welcome-file>
	</welcome-file-list>

</web-app>
